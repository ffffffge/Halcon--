<UserControl x:Class="Halcon查询.PdfViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Halcon查询"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- 工具栏 -->
        <ToolBar Grid.Row="0" Background="#F0F0F0">
            <!--<Button Name="btnOpen" Content="打开PDF" Click="btnOpen_Click"/>-->
            <Separator/>
            <Button Name="btnFirstPage" Content="首页" Click="btnFirstPage_Click"/>
            <Button Name="btnPrevPage" Content="上一页" Click="btnPrevPage_Click"/>
            <TextBlock Name="tbPageInfo" VerticalAlignment="Center" Margin="10,0"/>
            <Button Name="btnNextPage" Content="下一页" Click="btnNextPage_Click"/>
            <Button Name="btnLastPage" Content="末页" Click="btnLastPage_Click"/>
            <Separator/>
            <Button Name="btnZoomIn" Content="放大" Click="btnZoomIn_Click"/>
            <ComboBox Name="cbZoom" Width="100" Margin="5,0" 
                      SelectionChanged="cbZoom_SelectionChanged">
                <ComboBoxItem>20%</ComboBoxItem>
                <ComboBoxItem>50%</ComboBoxItem>
                <ComboBoxItem>70%</ComboBoxItem>
                <ComboBoxItem IsSelected="True">100%</ComboBoxItem>
                <ComboBoxItem>150%</ComboBoxItem>
                <ComboBoxItem>200%</ComboBoxItem>
                <ComboBoxItem>300%</ComboBoxItem>
                <ComboBoxItem>400%</ComboBoxItem>
                <ComboBoxItem>500%</ComboBoxItem>
                <ComboBoxItem>适合页面</ComboBoxItem>
                <ComboBoxItem>适合宽度</ComboBoxItem>
            </ComboBox>
            <Button Name="btnZoomOut" Content="缩小" Click="btnZoomOut_Click"/>
        </ToolBar>

        <!-- PDF显示区域 -->
        <Border Grid.Row="1" Background="White" Name="ImageContent">
            <ScrollViewer Name="scrollViewer" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto"
                      CanContentScroll="True">
                <Border Name="pdfContainer" 
                    BorderBrush="LightGray" 
                    BorderThickness="1"
                    Background="White">
                    <Image Name="pdfImage" 
                       Stretch="None" 
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>
            </ScrollViewer>
        </Border>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" VerticalAlignment="Bottom" Height="25">
            <StatusBarItem>
                <TextBlock Name="tbStatus" Text="就绪"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="tbZoomLevel" Text="缩放: 100%"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
